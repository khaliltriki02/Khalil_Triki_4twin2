{
  "name": "devops-project-4twin2",
  "version": "1.0.0",
  "description": "DevOps Project - Node.js REST API with CI/CD",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "docker:build": "docker build -t devops-project .",
    "docker:run": "docker run -p 3000:3000 devops-project"
  },
  "keywords": [
    "devops",
    "nodejs",
    "express",
    "docker",
    "ci-cd"
  ],
  "author": "Khalil Triki",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1",
    "eslint": "^8.52.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
